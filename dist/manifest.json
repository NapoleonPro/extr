{
  "manifest_version": 3,
  "name": "AI Transcript Enhancer",
  "version": "0.1.0",
  "description": "Real-time transcription with AI context repair",
  
  "permissions": [
    "activeTab",
    "storage"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "public/icons/icon.png"
    }
  },
  
  "icons": {
    "128": "public/icons/icon.png"
  }
}