{
  "manifest_version": 3,
  "name": "Napoleon AI - Tab Audio Transcription",
  "version": "0.2.0",
  "description": "Real-time tab audio transcription with AI repair for Zoom, Meet, and more",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabCapture"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "public/icons/icon.png"
    }
  },
  
  "icons": {
    "128": "public/icons/icon.png"
  }
}